# =============================================================================
# NTRIA - Nigeria Tax Reform Intelligence Assistant
# Environment Variables Template
# =============================================================================
# Copy this to .env and fill in your actual values
# NEVER commit .env to git - keep it local only
# =============================================================================

# ============================================================================
# OPENAI API
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================================================
# NEO4J GRAPH DATABASE
# ============================================================================
NEO4J_URI=bolt+s://your-neo4j-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# ============================================================================
# VECTOR DATABASE (Pinecone)
# ============================================================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX_NAME=ntria-tax-documents
VECTOR_DB_TYPE=pinecone  # Options: pinecone, chroma, faiss

# ============================================================================
# FASTAPI BACKEND
# ============================================================================
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
DEBUG=true
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# FRONTEND (NEXT.JS)
# ============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_APP_NAME=NTRIA
NEXT_PUBLIC_APP_VERSION=1.0.0

# ============================================================================
# RATE LIMITING & SECURITY
# ============================================================================
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=3600  # seconds (1 hour)
MAX_TOKENS_PER_REQUEST=2000

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================================================
# DATABASE BACKUPS
# ============================================================================
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily

# ============================================================================
# OPTIONAL: Additional Services
# ============================================================================
# TWILIO_ACCOUNT_SID=your_twilio_sid
# TWILIO_AUTH_TOKEN=your_twilio_token
# WHATSAPP_BUSINESS_API_KEY=your_whatsapp_key

# =============================================================================
# END OF ENVIRONMENT VARIABLES
# =============================================================================
