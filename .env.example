# Example environment file
# Copy to `.env` and fill in values (do NOT commit your real `.env`)

# Google / Gemini
GOOGLE_API_KEY=
GEMINI_API_KEY=

# Pinecone
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=ntria-tax-documents

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=
NEO4J_DATABASE=neo4j

# OpenAI (used for some scripts)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MODEL=gpt-4

# App settings
ALLOWED_ORIGINS=*  # comma-separated
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true

# Render
# For API-triggered deploys, set RENDER_API_KEY locally (do not commit)
RENDER_SERVICE_ID=

# Optional
VECTOR_DB_TYPE=pinecone
GRAPH_DB_PATH=/workspaces/AI-TAX-REFORM/data/knowledge_graph.json
